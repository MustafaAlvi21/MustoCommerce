<body>
    <section class="py-4 osahan-main-body">
        <div class="container">
            <div class="row my-5">
                <h2 class="text-center"> <i class="icofont-search-2"></i> Search results for "<%= searchItem %>"</h2>
            </div>
            <div class="row">
                <% if (data.length > 0 ){
                    data.forEach((item) => { %>
                        <div class="col-6 col-md-3 mb-3">
                            <div class="list-card bg-white h-100 rounded overflow-hidden position-relative shadow-sm">
                                <div class="list-card-image">
                                    <a href="/product-detail/<%= item.productId %>" class="text-dark">
                                        <% if (item.promo != '' && item.promo != undefined){ %> 
                                            <div class="member-plan position-absolute"><span class="badge m-3 badge-danger"> <%= item.promo %> </span></div>
                                        <% } %>
                                        <div class="p-3">
                                            <img src="<%= item.cover1ImagePath %>" alt="img" class="img-fluid item-img w-100 mb-3">
                                            <h6><%= item.name %></h6>
                                            <div class="d-flex align-items-center">
                                                <h6 class="price m-0 text-success">Rs. <% if (item.subPrice != '' && item.subPrice != undefined && item.subPrice != 0 && item.subPrice != item.price){ %>
                                                <s style= "color: red;"><span style= "color: #167D7F;"> <%= item.price %> </span></s> 
                                                <% } else { %>
                                                    <%= item.price %> 
                                                <% } %>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div> 
            
                <% })  } else { %> 
                    <div class="row my-5">
                        <h2 class="text-center"> <i class="icofont-search-2"></i> No results for "<%= searchItem %>"</h2>
                    </div>
                <% } %>
            </div>


                        <!--        Maybe You Like this         -->
                        <h5 class="mt-3 mb-3">Maybe You Like this.</h5>
                        <div class="row">
                            <% if(typeof recomendedItems != "undefined") {
                                recomendedItems.forEach( (item, i) => { %>
                                    <div class="col-sm-3 col-md-3 mb-3">
                                        <div class="list-card bg-white h-100 rounded overflow-hidden position-relative shadow-sm">
                                            <div class="list-card-image">
                                                <a href="/product-detail/<%= item.productId %>" class="text-dark">
                                                    <% if ( item.promo.length > 0){ %>
                                                        <div class="member-plan position-absolute">
                                                            <span class="badge m-3 badge-danger"><%= item.promo%>%</span>
                                                        </div>
                                                    <% } %>
                                                    <div class="p-3">
                                                        <img src="<%= item.image %>" alt="img-<%= i %>" class="img-fluid item-img w-100 mb-3">
                                                        <h6><%= item.name %></h6>
                                                        <div class="d-flex align-items-center">
                                                            <% if ( item.promo != ""){ %>
                                                                <b class="h6 text-dark m-0"> Rs. <del> <%= item.price %>.00 </del> &nbsp;<span class="text-success"><%= item.subPrice %></span> </b>
                                                            <% } else { %> 
                                                                <h6 class="price m-0 text-success">Rs. <%= item.price %></h6>
                                                            <% } %>
                                                            <a data-toggle="collapse" href="#collapseExample1" role="button" aria-expanded="false" aria-controls="collapseExample1" class="btn btn-success btn-sm ml-auto">+</a>
                                                            <div class="collapse qty_show" id="collapseExample1">
                                                                <div>                              
                                                                    <span class="ml-auto" href="#">
                                                                        <form id='myform' class="cart-items-number d-flex" method='POST' action='#'>
                                                                            <input type='button' value='-' class='qtyminus btn btn-success btn-sm' onclick="addToCart('-<%= item.productId %>')" />
                                                                            <input type='text' name='quantity' value='1' class='qty form-control' readonly/>
                                                                            <input type='button' value='+' class='qtyplus btn btn-success btn-sm' onclick="addToCart('+<%= item.productId %>')" />
                                                                        </form>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                            <% } )} %>
                            
                        </div>
            
        </div>
    </section>

</body>